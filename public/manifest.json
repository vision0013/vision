{
  "manifest_version": 3,
  "name": "Chrome Extension Crawler",
  "version": "4.16.0",
  "description": "A Chrome extension to crawl and analyze web pages with voice commands.",
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "webNavigation",
    "offscreen",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://huggingface.co/*",
    "https://blog.naver.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "type": "module",
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Open Page Crawler"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "wasm_files/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "offscreen": {
    "path": "offscreen.html"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src https://huggingface.co https://*.hf.co;"
  }
}
